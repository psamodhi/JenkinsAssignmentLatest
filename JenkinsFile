pipeline {
    agent any

    tools{
        maven:"M3"
    }

    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package'
                archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
            }

         }

        stage('Test') {
            steps {
               sh 'mvn clean test'
               junit '**/target/surefire-reports/*.xml'
            }
        }
        stage('Deploy') {
             when {
               expression {
                  currentBuild.result == null || currentBuild.result == 'SUCCESS'
             }
               }
               steps {
                }
    }
}